<h1><%= @author.name %></h1>

<h2>Your articles</h2>
<ul>
<% @author.articles.each do |article| %>
  <li>
    <h3><%= article.title %></h3>
    <h4><%= article.comments.size %> Comments:</h4>
    <ul>
      <% article.comments.each do |comment| %>
	<li><p><%= comment.body %></p></li>
      <% end %>
    </ul>
  </li>
<% end %>
</ul>
